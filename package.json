{
  "name": "huh-token",
  "version": "1.0.0",
  "description": "HUH token project",
  "license": "MIT",
  "scripts": {
    "postinstall": "npm install --save-dev hardhat-deploy-ethers && rm package-lock.json",
    "hardhat": "node --require esm node_modules/.bin/hardhat",
    "flatten": "run(){ yarn hardhat flatten contracts/$1.sol > Flat$1.sol; }; run",
    "compile": "yarn hardhat compile",
    "test": "yarn hardhat test",
    "coverage": "yarn hardhat coverage",
    "deploy": "yarn hardhat deploy --network",
    "redeploy": "func() { rm -rf deployments/\"$1\" && yarn hardhat deploy --network \"$1\"; }; func",
    "coveralls": "yarn coverage && cat coverage/lcov.info | coveralls",
    "ganache:start": "ganache-cli",
    "solhint": "solhint 'contracts/**/*.sol'",
    "solhint:fix": "solhint --fix 'contracts/**/*.sol'",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "prepare": "husky install",
    "gas-report": "env ENABLE_GAS_REPORT=1 npm run test"
  },
  "devDependencies": {
    "@babel/core": "^7.17.5",
    "@babel/eslint-parser": "^7.17.0",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers@^0.3.0-beta.13",
    "@nomiclabs/hardhat-solhint": "^2.0.0",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@openzeppelin/contracts": "^4.5.0",
    "@openzeppelin/contracts-upgradeable": "^4.5.2",
    "@openzeppelin/hardhat-defender": "^1.6.0",
    "@openzeppelin/hardhat-upgrades": "^1.15.0",
    "@openzeppelin/test-helpers": "^0.5.15",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.21",
    "babel-eslint": "10.1.0",
    "babel-preset-env": "^1.7.0",
    "bn.js": "^5.2.0",
    "chai": "^4.3.6",
    "chai-ethers": "^0.0.1",
    "coveralls": "^3.1.1",
    "eslint": "^8.10.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "esm": "^3.2.25",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.5.4",
    "hardhat": "^2.9.1",
    "hardhat-deploy": "^0.10.5",
    "hardhat-deploy-ethers": "^0.3.0-beta.13",
    "hardhat-gas-reporter": "^1.0.8",
    "husky": "^7.0.4",
    "mocha": "^9.2.1",
    "solhint": "^3.3.7",
    "solidity-coverage": "^0.7.20"
  }
}
